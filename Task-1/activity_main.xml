<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="820dp"
        android:background="@drawable/bg" />

    <TextView
        android:layout_width="match_parent"
        android:text="Food Items"
        android:gravity="center"
        android:textSize="50dp"
        android:id="@+id/text1"
        android:textColor="#044EE3"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/pizza"
        android:layout_below="@id/text1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/image1" />

    <TextView
        android:layout_width="match_parent"
        android:text="Pizza"
        android:layout_below="@id/image1"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/text2"
        android:textColor="#239BFE"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/burger"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/image2"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Burger"
        android:layout_below="@id/image2"
        android:textSize="30dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/text3"
        android:textColor="#239BFE"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/noodle"
        android:layout_below="@id/text2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/image3"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Noodles"
        android:layout_below="@id/image3"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/text4"
        android:textColor="#239BFE"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/sandwich"
        android:layout_below="@id/text3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/image4"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Sandwich"
        android:layout_below="@id/image4"
        android:textSize="30dp"
        android:layout_marginLeft="240dp"
        android:id="@+id/text5"
        android:textColor="#239BFE"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="176dp"
        android:background="@drawable/biryani"
        android:layout_below="@id/text4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/image5"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Biryani"
        android:layout_below="@id/image5"
        android:textSize="30dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/text6"
        android:textColor="#239BFE"
        android:layout_height="wrap_content"/>


</RelativeLayout>